full_width_title=true
button_offset=0

## number of pixels between each button
button_spacing=5

#active_border_color=#000000
#inactive_border_color=#000000

## The title text position can be adjusted to fit the theme design by using the offset values.
## vertical: positive value moves text down, negative moves it up
title_vertical_offset_active=-2
title_vertical_offset_inactive=-2
title_horizontal_offset=0

## places a space between the right edge (top-right-active) and the button (close, hideâ€¦) when maximized. 
#maximized_offset=0

## XFWM Versions 4.14.1 and above can take advantage of this feature to crop the top frame border of maximized application windows. 
## Value of 0 is default. Any other value is a number of pixels to remove. 
frame_border_top=2

## replace the menu button with application icon. The application icon will be limited by width of menu button. Stay tuned! 
show_app_icon=true


## button_layout :
##    O = Option menu
##    T = Stick
##    H = hide
##    S = shade
##    M = maximize
##    C = close
##    | = title
#button_layout=OTS|HMC

